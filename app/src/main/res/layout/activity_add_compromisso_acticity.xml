<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCompromissoActicity"
    android:background="@color/dark_theme_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark_theme_purple"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:text="TELA APENAS PARA TESTE"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@id/topbar"
        android:layout_margin="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Data:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/data_input"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Título:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/titulo_input"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:text="Descrição:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/descricao_input"

            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:inputType="text"
            android:maxLines="3"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Id da cor (0 a 3):"
                android:textColor="@color/white"
                android:textStyle="bold"

                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/colorId_input"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="@color/white"

                android:inputType="number"
                android:maxLines="1"
                android:backgroundTint="@color/white"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_button"

        android:layout_width="64dp"
        android:layout_height="64dp"

        app:fabCustomSize="64dp"

        android:backgroundTint="@color/dark_theme_purple"
        app:tint="@color/white"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="12dp"
        android:src="@drawable/ic_outline_save_24"

        android:contentDescription="Adicionar Compromisso."

        />

</androidx.constraintlayout.widget.ConstraintLayout>